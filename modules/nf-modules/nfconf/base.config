def trace_timestamp = new java.util.Date().format( 'yyyy-MM-dd_HH-mm-ss')
    
docker {
  runOptions = "--gpus all -u 0"
  enabled = true
  // userEmulation = true
}

params {
 citest=false
 repoDir='/seqprg'
 cloudprj = ''
 version = 'latest'
